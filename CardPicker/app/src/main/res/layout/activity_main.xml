<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.boxbreakers.cardpicker.MainActivity">

    <ViewFlipper
        android:id="@+id/viewFlipper1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:addStatesFromChildren="true"
        android:layout_centerInParent="false"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipper2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:addStatesFromChildren="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/viewFlipper1"
        android:layout_marginStart="80dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView2" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipper3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viewFlipper1"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView3" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipper4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viewFlipper2"
        android:layout_toEndOf="@+id/viewFlipper1"
        android:layout_marginStart="80dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView4" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipper5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viewFlipper3"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back5"
            android:layout_marginTop="26dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView5" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipper6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viewFlipper4"
        android:layout_toEndOf="@+id/viewFlipper1"
        android:layout_marginStart="80dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView6" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipper7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viewFlipper5"
        android:layout_marginLeft="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView7" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipper8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viewFlipper6"
        android:layout_toEndOf="@+id/viewFlipper1"
        android:layout_marginStart="80dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/back8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/imageView8" />
    </ViewFlipper>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/viewFlipper1"
        android:id="@+id/textView" />

</RelativeLayout>
